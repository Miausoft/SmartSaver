                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="0.689"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.Background>
