<Window x:Class="SmartSaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartSaver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="625" Foreground="#FF194D4C" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1A685B"/>
            <GradientStop Color="#FF7C9D9A" Offset="0.187"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TabControl BorderBrush="{x:Null}" Background="White">
            <TabItem x:Name="LogInTab" Header="➢" Margin="475,13,-480,-13" FontFamily="Bahnschrift SemiBold" FontSize="20" BorderBrush="{x:Null}">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="0.689"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FF74C0B9" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <Rectangle HorizontalAlignment="Center" Height="115" Margin="0,136,0,0" VerticalAlignment="Top" Width="183">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="White" Opacity="0.4"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle HorizontalAlignment="Center" Height="48" Margin="0,261,0,0" VerticalAlignment="Top" Width="183">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="White" Opacity="0.4"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="314" FontFamily="Corbel Light" FontStyle="Normal" FontSize="32" FontWeight="Normal" TextAlignment="Center"><Run Language="lt-lt" Text="SMART SAVER"/></TextBlock>
                    <Label Content="Don't have an account?" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="10" FontStyle="Italic" Height="25" Width="123"/>
                    <Button x:Name="LogInButton" Content="Log in" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Height="24" Width="166" Click="Button_Click" Background="#FF3B7A70" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe UI" FontSize="11"/>
                    <TextBox x:Name="usernameTextbox" HorizontalAlignment="Center" Margin="0,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="20" FontSize="14" FontFamily="Segoe UI"/>
                    <Label Content="Password:" Margin="226,176,343,0" VerticalAlignment="Top" FontSize="10" FontFamily="Arial" FontStyle="Italic"/>

                    <Label Content="Username:" HorizontalAlignment="Left" Margin="226,136,0,0" VerticalAlignment="Top" FontSize="10" FontFamily="Arial" FontStyle="Italic"/>
                    <PasswordBox x:Name="passwordTextbox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="166" Height="20" Margin="0,194,0,0" FontSize="14" FontFamily="Segoe UI"/>
                    <Button Content="Sign up" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" Height="24" Width="166" FontFamily="Segoe UI" BorderBrush="{x:Null}" Background="#FF3B7A70" Click="Button_Click_2" FontSize="11" Foreground="White"/>
                    <Label Content="Save easier." HorizontalAlignment="Center" Margin="0,89,0,0" VerticalAlignment="Top" FontFamily="Calibri Light" FontSize="15" FontStyle="Normal" Height="28" Width="79"/>
                    <Button Content="ENABLE TABS" HorizontalAlignment="Left" Margin="498,70,0,0" VerticalAlignment="Top" Click="Button_Click_1" FontSize="11" Height="17" Width="74"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="statusTab" Header="STATUS" Margin="-31,13,31,-13" Width="120" FontFamily="Bahnschrift SemiBold" FontSize="16" BorderBrush="{x:Null}" IsEnabled="False">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FF74C0B9" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="74*"/>
                        <ColumnDefinition Width="323*"/>

                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" Margin="12,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="230" FontFamily="Candara Light" FontStyle="Italic" FontSize="14" FontWeight="Normal" Grid.ColumnSpan="2"><Run Text="Next su"/><Run Language="lt-lt" Text="g"/><Run Text="gestions"/><Run Text=": YYYY-MM-DD"/></TextBlock>
                    <GroupBox Header="" Margin="10,71,228,71" Background="White" Grid.ColumnSpan="2">
                        <TextBlock HorizontalAlignment="Left" Margin="22,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="250" Width="330" FontSize="18"><Run Text="INFORMACIJA kaip ir kiek buvo galima sutaupyti"/><Run Language="lt-lt" Text=" / INFORMACIJA kaip ir kiek buvo galima sutaupyti / "/><Run Text="INFORMACIJA kaip ir kiek buvo galima sutaupyti"/><Run Language="lt-lt" Text=" / INFORMACIJA kaip ir kiek buvo galima sutaupyti / "/><Run Text="INFORMACIJA kaip ir kiek buvo galima sutaupyti"/><Run Language="lt-lt" Text=" / INFORMACIJA kaip ir kiek buvo galima sutaupyti /"/><LineBreak/><Run Language="lt-lt"/></TextBlock>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem x:Name="entriesTab" Header="ENTRIES" Margin="-33,13,33,-13" Width="120" Background="White" FontFamily="Bahnschrift SemiBold" FontSize="16" BorderBrush="{x:Null}" IsEnabled="False">
                <Grid Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FF74C0B9" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>
                    <GroupBox Header="" Margin="176,43,171,133" Background="White" BorderBrush="#FF74C0B9"/>
                    <Label Content="Spendings / Earnings&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" Width="218" FontFamily="Arial" FontStyle="Italic" FontSize="11"/>
                    <TextBox HorizontalAlignment="Center" Margin="0,76,0,0" Text=" 0.00" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Height="38" FontFamily="Arial" TextAlignment="Center" FontSize="36"/>
                    <Button Content="ENTER" HorizontalAlignment="Center" Margin="0,213,0,0" VerticalAlignment="Top" Height="34" Width="218" BorderBrush="White" Background="#FF74C0B9" Click="Button_Click_3"/>
                    <CheckBox Content="Spendings&#xD;&#xA;" HorizontalAlignment="Left" Margin="204,135,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Earinings" HorizontalAlignment="Left" Margin="326,135,0,0" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top" Width="218" SelectionChanged="ComboBox_SelectionChanged"/>

                </Grid>
            </TabItem>
            <TabItem x:Name="historyTab" Header="HISTORY" Margin="-36,13,0,-13" Width="120" FontSize="16" FontFamily="Bahnschrift SemiBold" BorderBrush="{x:Null}" HorizontalAlignment="Left" IsEnabled="False">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>

                <Grid Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FF74C0B9" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listView" Margin="10,18,10,10" SelectionChanged="ListView_SelectionChanged" FontFamily="Segoe UI">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" Width="200" DisplayMemberBinding="{Binding Date}" />
                                <GridViewColumn Header="Amount" Width="160" DisplayMemberBinding="{Binding Amount}" />
                                <GridViewColumn Header="Direction" Width="80" DisplayMemberBinding="{Binding Direction}" />
                                <GridViewColumn Header="Category" Width="160" DisplayMemberBinding="{Binding Category}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </TabItem>
            <TabItem x:Name="savingPlansTab" Header="SAVING PLANS" Margin="-38,13,40,-13" FontSize="16" FontFamily="Bahnschrift SemiBold" BorderBrush="{x:Null}" Background="White" IsEnabled="False">
                <Grid Background="White" Height="400" Width="625" Margin="-2,0,-4,0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <Label Content="Priorities?&#xD;&#xA;&#xD;&#xA;etc." HorizontalAlignment="Left" Margin="24,66,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
