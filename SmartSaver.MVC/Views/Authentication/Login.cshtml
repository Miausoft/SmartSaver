@model SmartSaver.EntityFrameworkCore.Models.User
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/generalDesign.css" />
    <title>@ViewBag.Title</title>
</head>

<br />
<h1>User Login</h1>
<br />

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Login" asp-controller="Authentication" asp-route-returnUrl="@Context.Request.Query["returnurl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
        <br />
        <form method="post" asp-action="ExternalLogin" asp-controller="Authentication" asp-route-returnUrl="@Context.Request.Query["returnurl"]">
            <button type="submit" name="provider" value="Google" class="btn">Google Login</button>
            <button type="submit" name="provider" value="Facebook" class="btn">Facebook Login</button>
        </form>
    </div>
</div>
