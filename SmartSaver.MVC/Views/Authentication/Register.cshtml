@model AuthenticationViewModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/generalDesign.css" />
    <title>@ViewBag.Title</title>
</head>
<br>
<br>
<body onload="UsernameCheck(); EmailCheck()" style="background-size:cover; background-image: url(https://images.unsplash.com/photo-1475650522725-015d35677789?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1050&q=80)">
    <div class="card center" style="max-width: 500px; padding: 20px 20px 20px 20px;">
        <div class="card-block">
            <div class="col-md-12">
                <form method="post">

                    <p class="h4 text-center py-4">Create New Account</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group required control-label">
                        <input asp-for="Username" class="form-control" oninput="UsernameCheck()" id="Username" placeholder="Username"/>
                        <span asp-validation-for="Username" class="text-danger" id="Status1"></span>
                    </div>
                    <div class="form-group required control-label">
                        <input asp-for="Email" class="form-control" oninput="EmailCheck()" id="Email" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger" id="Status2"></span>
                    </div>
                    <div class="form-group required control-label">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="form-text text-muted font-italic">Make sure it's at least 5 characters including a number, lowercase and capital letter.</small>
                    </div>
                    <div class="form-group required control-label">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style="padding:5px 35px 5px 35px;">Register</button>
                </form>
                <div class="or-container">
                    <div class="line-separator"></div>
                    <div class="or-label">or</div>
                    <div class="line-separator"></div>
                </div>
                <form method="post" asp-action="ExternalLogin" asp-controller="Authentication" asp-route-returnUrl="@Context.Request.Query["returnurl"]">
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" name="provider" value="Google" class="btn btn-lg btn-google btn-block text-uppercase btn-outline">
                                Google Register⠀
                                <img src="https://img.icons8.com/color/16/000000/google-logo.png">
                            </button>
                        </div> <br>
                    </div>
                    <div class="row" style="padding-top:5px;">
                        <div class="col-md-12">
                            <button type="submit" name="provider" value="Facebook" class="btn btn-lg btn-google btn-block text-uppercase btn-outline">
                                Facebook Register⠀
                                <img src="https://icons.iconarchive.com/icons/danleech/simple/16/facebook-icon.png" style="background-size: 5px;">
                            </button>
                        </div> <br>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<br><br><br>

<script>
    function UsernameCheck() {
        var length = document.getElementById("Username").value.length;
        if (length != 0) {
            $("#Status1").html('<font color="Green">Loading...</font>');
            $("#Username").css("border-color", "Green");
            if (length >= 5) {
                $.get("@Url.Action("DoesUsernameExist", "Authentication")",
                    {
                        username: $('#Username').val()
                    },
                    function (data) {
                        if (data == false) {
                            $("#Status1").html('<font color="Green">Username is available.</font>');
                            $("#Username").css("border-color", "Green");
                        }
                        else {
                            $("#Status1").html('<font color="Red">Username is already taken.</font>');
                            $("#Username").css("border-color", "Red");
                        }
                    });
            }
            else {
                $("#Status1").html('<font color="Red">Username must be at least 5 characters long.</font>');
                $("#Username").css("border-color", "Red");
            }
        }
    }

    function EmailCheck() {
        if (document.getElementById("Email").value.length != 0) {
            $.get("@Url.Action("DoesEmailExist", "Authentication")",
                {
                    email: $('#Email').val()
                },
                function (data) {
                    if (data == false) {
                        $("#Status2").html("");
                    }
                    else {
                        $("#Status2").html('<font color="Red">Email is already asociated with another account.</font>');
                        $("#Email").css("border-color", "Red");
                    }
                });
        }
    }
</script>